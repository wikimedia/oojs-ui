{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/jsdoc"
	],
	"plugins": [
		"mediawiki"
	],
	"globals": {
		"OO": "writable"
	},
	"rules": {
		"mediawiki/msg-doc": "error",
		"no-jquery/no-visibility": "error",
		"es-x/no-regexp-prototype-flags": "off",
		"prefer-arrow-callback": "error",
		"implicit-arrow-linebreak": "error",
		"arrow-body-style": "error"
	}
}
